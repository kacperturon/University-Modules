@model COMP1632.ViewModels.NewEnquiryViewModel
@{
    ViewBag.Title = "New";
}
@using (Html.BeginForm("New","Enquiry", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <div class="page-header">
            <h2>New Enquiry:</h2>
        </div>
        @Html.HiddenFor(model => model.TripId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.DropDownListFor(
                    x => x.SelectedTitleOption,
                    new SelectList(Model.TitleOptions, "Value", "Text"),
                    "Select type of Enquiry", new { @class = "form-control", @style = "display:initial; width:auto;" }
                    )
                @Html.ValidationMessageFor(x => x.SelectedTitleOption,"", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Question, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Question, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Question, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Send" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

